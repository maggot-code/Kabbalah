{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "noLib": false,
        "target": "ES6",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib"
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}